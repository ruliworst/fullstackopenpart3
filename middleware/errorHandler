module.exports = (error, request, response, next) => {
  //console.error(error)

  if(error.name === 'CastError') {
    return response.status(400).send({error: 'malformed id'})
  }

  if(error.name === 'ValidationError') {
    return response.status(400).json({ error: error.message })
  }

  next(error)
}